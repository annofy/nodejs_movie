extends ../layout
block content
	.container
		.row
			each catagory in categories
				.panel.panel-default
					.panel-heading
						h3 #{catagory.name}
					.panel-body
						if catagory.movies && catagory.movies.length > 0
							each item in catagory.movies
								.col-md-2
									.thumbnail
										a(href="/movie/#{item._id}")
											img(src="#{item.poster}",alt="#{item.title}")
											h3 #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}" ,role="button") 免费观看预告片
