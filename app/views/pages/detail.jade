extends ../layout
block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.source}",allowFullScreen="true", quality="high", width="720" , height="600", align="middle" ,type="application/x-shockwave-flash")
				.panel.panel-default
					.panel-heading
						h3.panel-title 评论区
					.panel-body
						ul.media-list
							each item in comments
								li.media
									.pull-left
										img.media-object(src="http://img.mukewang.com/564d3741000197a101800180-200-200.jpg", width="64", height="64")
									.media-body
										h4.media-heading #{item.from.name}
										p #{item.content}
								hr
							form(method="post", action="/user/comment")
								input(type="hidden", name="comment[movie]", value="#{movie._id}")
								input(type="hidden", name="comment[from]", value="#{user._id}")
								.form-group
									textarea.form-control(row="3", name="comment[content]")
								button.btn.btn-primary(type="submit") 提交


			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd=movie.title
					dt 导演
					dd=movie.guider
					dt 国家
					dd=movie.country
					dt 语言
					dd=movie.language
					dt 上映年份
					dd=movie.year
					dt 简介
					dd=movie.summary